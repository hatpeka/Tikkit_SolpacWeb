@model Tikkit_SolpacWeb.Models.Users

@{
    ViewData["Title"] = "Change Password";
}

<h2>Đổi mật khẩu</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label">Mật khẩu hiện tại</label>
                <input asp-for="CurrentPassword" type="password" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Mật khẩu mới</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Đổi mật khẩu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>