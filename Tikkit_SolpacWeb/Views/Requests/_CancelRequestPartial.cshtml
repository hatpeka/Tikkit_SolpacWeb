@model Tikkit_SolpacWeb.Models.CancelRequestViewModel

<form asp-action="CancelRequest">
    <input type="hidden" asp-for="RequestNo" />

    <div class="form-group">
        <label asp-for="CancelReason" class="control-label"></label>
        <textarea asp-for="CancelReason" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="Cancel Request" class="btn btn-primary" />
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
